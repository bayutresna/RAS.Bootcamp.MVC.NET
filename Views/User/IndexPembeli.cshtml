@using System.Collections;
@model IEnumerable<RAS.Bootcamp.MVC.NET.Models.Entity.Pembeli> 
@{
    ViewData["Title"] = "Data Pembeli";
}

<table class="table" >
    
    <tr>
        <th>
            Nama Pembeli
        </th>
        <th>
            Alamat Pembeli
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NamaPembeli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlamatPembeli)
        </td>
        <td>
            <a type="edit" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="User" asp-action="EditPembeli">Edit</a>
        </td>
        <td> 
            <a type="delete" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="User" asp-action="DeletePembeli">Delete</a>
        </td>
    </tr>
}
    <th>
        <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="InputPembeli">Input Data Produk</a>
    </th>
</table>
