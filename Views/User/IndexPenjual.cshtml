@using System.Collections;
@model IEnumerable<RAS.Bootcamp.MVC.NET.Models.Entity.Penjual> 
@{
    ViewData["Title"] = "Data Penjual";
}

<table class="table" >
    
    <tr>
        <th>
            Nama Toko
        </th>
        <th>
            Alamat Toko
        </th>
        <th>
            No HP Toko
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NamaToko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlamatToko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoHP)
        </td>
        <td>
            <a type="edit" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="User" asp-action="EditPenjual">Edit</a>
        </td>
        <td> 
            <a type="delete" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="User" asp-action="DeletePenjual">Delete</a>
        </td>
    </tr>
}
    <th>
        <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="InputPenjual">Input Data Penjual</a>
    </th>
</table>
